<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exFiveDayLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/exFiveDayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/primary_purpul"
            android:textSize="16sp"
            tools:text="24" />

        <View
            android:id="@+id/exFiveDayFlightTop"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="18dp"
            android:background="@drawable/example_3_today_bg" />

        <View
            android:id="@+id/exFiveDayFlightBottom"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/example_5_today_bg" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


